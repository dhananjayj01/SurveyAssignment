@{
}
@model SectionViewModel
@{
    int qIndex = ViewBag.QuestionIndex ?? 0;
    var question = Model.Questions[qIndex];
}

<form method="post">
    @await Html.PartialAsync("_QuestionRenderer", question)

    <div class="mt-3">
        @if (qIndex > 0)
        {
            <a href="?questionIndex=@(qIndex - 1)">Previous</a>
        }

        <button type="submit">Next</button>
    </div>
</form>
